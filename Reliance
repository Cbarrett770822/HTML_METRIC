    <script>
        // Initialize Lucide Icons
        lucide.createIcons();

        // Update time and date
        function updateTime() {
            const now = new Date();
            document.getElementById('current-time').textContent = now.toLocaleString('en-IN', {
                dateStyle: 'full',
                timeStyle: 'short'
            });
            document.getElementById('market-cap-date').textContent = now.toLocaleDateString('en-IN', {
                day: '2-digit',
                month: 'short',
                year: 'numeric'
            });
        }
        updateTime();
        setInterval(updateTime, 60000); // Update every minute

        const chartTextColor = '#475569'; // Slate-600
        const chartGridColor = 'rgba(226, 232, 240, 0.8)'; // Slate-200 with opacity

        // Chart: Inventory Distribution
        const inventoryCtx = document.getElementById('inventoryDistributionChart').getContext('2d');
        new Chart(inventoryCtx, {
            type: 'doughnut',
            data: {
                labels: ['Electronics', 'Apparel', 'Groceries', 'Home Goods', 'FMCG'],
                datasets: [{
                    label: 'Inventory Value',
                    data: [35, 25, 15, 15, 10],
                    backgroundColor: [
                        '#00A3E0', // Reliance Blue
                        '#60a5fa', // Blue 400
                        '#94a3b8', // Slate 400
                        '#cbd5e1', // Slate 300
                        '#e2e8f0'  // Slate 200
                    ],
                    borderColor: '#ffffff',
                    borderWidth: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: {
                            color: chartTextColor,
                            boxWidth: 20,
                            padding: 20
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return ` ${context.label}: ${context.raw}%`;
                            }
                        }
                    }
                },
                cutout: '60%'
            }
        });

        // Chart: Warehouse Throughput
        const throughputCtx = document.getElementById('warehouseThroughputChart').getContext('2d');
        const gradient = throughputCtx.createLinearGradient(0, 0, 0, 300);
        gradient.addColorStop(0, 'rgba(0, 163, 224, 0.3)');
        gradient.addColorStop(1, 'rgba(0, 163, 224, 0)');

        new Chart(throughputCtx, {
            type: 'line',
            data: {
                labels: ['Wk 1', 'Wk 2', 'Wk 3', 'Wk 4', 'Wk 5', 'Wk 6', 'Wk 7', 'Wk 8'],
                datasets: [{
                    label: 'Units Processed (in thousands)',
                    data: [450, 480, 510, 490, 530, 550, 580, 560],
                    borderColor: '#00A3E0',
                    borderWidth: 2,
                    pointBackgroundColor: '#00A3E0',
                    pointBorderColor: '#ffffff',
                    pointHoverRadius: 7,
                    tension: 0.4,
                    fill: {
                        target: 'origin',
                        above: gradient,
                    }
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        ticks: { color: chartTextColor,
                            callback: function(value) {
                                return value + 'k';
                            }
                        },
                        grid: { color: chartGridColor }
                    },
                    x: {
                        ticks: { color: chartTextColor },
                        grid: { color: chartGridColor }
                    }
                }
            }
        });

        // Chart: Logistics Costs
        const logisticsCtx = document.getElementById('logisticsCostsChart').getContext('2d');
        new Chart(logisticsCtx, {
            type: 'bar',
            data: {
                labels: ['Q1 FY24', 'Q2 FY24', 'Q3 FY24', 'Q4 FY24'],
                datasets: [
                {
                    label: 'Transportation',
                    data: [120, 125, 140, 135],
                    backgroundColor: '#00A3E0', // Reliance Blue
                    borderRadius: 4
                }, {
                    label: 'Warehousing',
                    data: [80, 82, 85, 88],
                    backgroundColor: '#60a5fa', // Blue 400
                    borderRadius: 4
                }, {
                    label: 'Last-Mile Delivery',
                    data: [95, 105, 115, 110],
                    backgroundColor: '#94a3b8', // Slate 400
                    borderRadius: 4
                }, {
                    label: 'Labor',
                    data: [60, 62, 65, 68],
                    backgroundColor: '#cbd5e1', // Slate 300
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        align: 'end',
                        labels: {
                            color: chartTextColor
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        stacked: true,
                        ticks: { 
                            color: chartTextColor,
                            callback: function(value) {
                                return 'â‚¹' + value;
                            }
                        },
                        grid: { color: chartGridColor }
                    },
                    x: {
                        stacked: true,
                        ticks: { color: chartTextColor },
                        grid: { display: false }
                    }
                },
                interaction: {
                    mode: 'index',
                    intersect: false
                }
            }
        });

    </script>
