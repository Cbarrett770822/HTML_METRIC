                        <div class="border-b border-gray-200">
                            <nav class="-mb-px flex space-x-6" aria-label="Tabs">
                                <button class="warehouse-tab whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm text-gray-800 border-gray-800" data-warehouse="Mumbai">Mumbai</button>
                                <button class="warehouse-tab whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 border-transparent" data-warehouse="Delhi">Delhi</button>
                                <button class="warehouse-tab whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 border-transparent" data-warehouse="Hyderabad">Hyderabad</button>
                            </nav>
                        </div>

                        <div class="overflow-x-auto mt-4">
                            <table class="w-full text-sm text-left text-gray-500">
                                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
