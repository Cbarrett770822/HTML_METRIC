<script>
    lucide.createIcons();

    // Chart.js instances
    let mheChart;

    // MHE Chart
    const mheCtx = document.getElementById('mheChart').getContext('2d');
    mheChart = new Chart(mheCtx, {
        type: 'doughnut',
        data: {
            labels: ['Active', 'Idle', 'Charging', 'Maintenance'],
            datasets: [{
                label: 'MHE Status',
                data: [65, 20, 10, 5],
                backgroundColor: [
                    'rgb(59, 130, 246)',    // Blue
                    'rgb(107, 114, 128)',   // Gray-500
                    'rgb(156, 163, 175)',   // Gray-400
                    'rgb(239, 68, 68)'      // Red
                ],
                hoverOffset: 4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                }
            }
        }
    });

    // Dummy data simulation
    function getRandom(min, max, decimals = 1) {
        const str = (Math.random() * (max - min) + min).toFixed(decimals);
        return parseFloat(str);
    }
    
    const assetTableBody = document.getElementById('asset-table');
    const assets = [
        { id: 'AGV-M-001', warehouse: 'Mumbai', location: 'Aisle 14-B', status: 'Active', battery: 88 },
        { id: 'AGV-M-002', warehouse: 'Mumbai', location: 'Packing Station 2', status: 'Idle', battery: 95 },
        { id: 'AGV-M-003', warehouse: 'Mumbai', location: 'Aisle 5-A', status: 'Active', battery: 65 },
        { id: 'AGV-D-001', warehouse: 'Delhi', location: 'Dock 3', status: 'Charging', battery: 45 },
        { id: 'AGV-D-002', warehouse: 'Delhi', location: 'Aisle 11-C', status: 'Active', battery: 78 },
        { id: 'AGV-H-001', warehouse: 'Hyderabad', location: 'Aisle 22-D', status: 'Active', battery: 72 },
        { id: 'AGV-H-002', warehouse: 'Hyderabad', location: 'Maintenance Bay', status: 'Maintenance', battery: 12 },
    ];
    
    const alertListEl = document.getElementById('alert-list');
    const alerts = [
         {
            type: 'High',
            icon: 'siren',
            color: 'red',
            message: 'Freezer unit FZ-02 in Mumbai Cold Storage offline.',
            time: '2 mins ago'
        },
        {
            type: 'High',
            icon: 'thermometer',
            color: 'red',
            message: 'Pharma Grade temp at 19.8째C (Threshold: 18째C).',
            time: '5 mins ago'
        },
        {
            type: 'Medium',
            icon: 'truck',
            color: 'yellow',
            message: 'Vehicle DL01-AB1234 (Delhi) waiting > 60 mins.',
            time: '25 mins ago'
        },
        {
            type: 'Low',
            icon: 'battery-warning',
            color: 'blue',
            message: 'AGV-H-002 battery critical (12%).',
            time: '45 mins ago'
        }
    ];

    let selectedWarehouse = 'Mumbai'; // Default warehouse
    const warehouseTabs = document.querySelectorAll('.warehouse-tab');

    function renderAssets(warehouse) {
        assetTableBody.innerHTML = '';
        const filteredAssets = assets.filter(asset => asset.warehouse === warehouse);

        if (filteredAssets.length === 0) {
            assetTableBody.innerHTML = `<tr><td colspan="4" class="text-center py-4 text-gray-500">No assets to display for this warehouse.</td></tr>`;
            return;
        }

        filteredAssets.forEach(asset => {
            let statusColor;
            switch(asset.status) {
                case 'Active': statusColor = 'text-green-700 bg-green-50'; break;
                case 'Idle': statusColor = 'text-yellow-700 bg-yellow-50'; break;
                case 'Charging': statusColor = 'text-blue-700 bg-blue-50'; break;
                case 'Maintenance': statusColor = 'text-red-700 bg-red-50'; break;
                default: statusColor = 'text-gray-600 bg-gray-100';
            }
            assetTableBody.innerHTML += `
                <tr class="bg-white border-b">
                    <td class="px-6 py-4 font-medium text-gray-900">${asset.id}</td>
                    <td class="px-6 py-4">${asset.location}</td>
                    <td class="px-6 py-4">
                        <span class="px-2 py-1 text-xs font-semibold rounded-full ${statusColor}">${asset.status}</span>
                    </td>
                    <td class="px-6 py-4">${asset.battery}%</td>
                </tr>
            `;
        });
    }

    warehouseTabs.forEach(tab => {
        tab.addEventListener('click', () => {
            selectedWarehouse = tab.dataset.warehouse;
            
            warehouseTabs.forEach(t => {
                t.classList.remove('text-gray-800', 'border-gray-800');
                t.classList.add('text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300', 'border-transparent');
            });
            tab.classList.add('text-gray-800', 'border-gray-800');
            tab.classList.remove('text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300', 'border-transparent');
            
            renderAssets(selectedWarehouse);
        });
    });

    function renderAlerts() {
        alertListEl.innerHTML = '';
        alerts.forEach(alert => {
            alertListEl.innerHTML += `
                <div class="flex items-start p-3 bg-gray-50 rounded-lg border">
                    <div class="p-2 rounded-full bg-${alert.color}-100 text-${alert.color}-600 mr-4">
                        <i data-lucide="${alert.icon}" class="w-5 h-5"></i>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-800">${alert.message}</p>
                        <p class="text-xs text-gray-500">${alert.time}</p>
                    </div>
                </div>
            `;
        });
        lucide.createIcons();
    }

    function updateDashboard() {
        // Update top stats
        document.getElementById('overall-efficiency').textContent = `${getRandom(94, 95.5)}%`;
        document.getElementById('inventory-accuracy').textContent = `${getRandom(99.1, 99.4)}%`;

        // Update environment
        document.getElementById('temp-cold').textContent = `${getRandom(-2.5, -1.8)}째C`;
        document.getElementById('hum-cold').textContent = `${getRandom(84, 86, 0)}%`;
        document.getElementById('temp-ambient').textContent = `${getRandom(22.2, 22.8)}째C`;
        document.getElementById('hum-ambient').textContent = `${getRandom(57, 59, 0)}%`;
        
        // Update MHE Chart
        mheChart.data.datasets[0].data = [
            getRandom(60, 70, 0),
            getRandom(15, 25, 0),
            getRandom(8, 12, 0),
            getRandom(4, 6, 0)
        ];
        mheChart.update();
        
        // Update asset locations and statuses randomly
        const randomAsset = assets[Math.floor(Math.random() * assets.length)];
        if (randomAsset.status !== 'Maintenance' && randomAsset.status !== 'Charging') {
            randomAsset.location = `Aisle ${getRandom(1, 30, 0)}-${['A','B','C','D'][getRandom(0,3,0)]}`;
            if(randomAsset.battery > 20) {
                 randomAsset.battery -= 1;
            } else {
                randomAsset.status = 'Low Battery';
            }
        }
       
        renderAssets(selectedWarehouse);
    }
    
    // Initial render
    renderAssets(selectedWarehouse);
    renderAlerts();

    // Set update interval
    setInterval(updateDashboard, 5000);

</script>
</body>
</html>

